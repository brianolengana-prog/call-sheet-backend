{
  "name": "sjcallsheets-backend-tests",
  "version": "1.0.0",
  "description": "Test configuration for SJ Call Sheets extraction system",
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/extraction",
    "test:integration": "jest tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:quick": "node test-adaptive-extraction.js"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "services/extraction/**/*.js",
      "services/unifiedExtractionService.js",
      "!**/*.test.js",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageThresholds": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "verbose": true,
    "testTimeout": 30000
  },
  "devDependencies": {
    "jest": "^29.0.0"
  }
}

